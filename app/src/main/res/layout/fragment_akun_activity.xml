<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AkunActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="@id/tv_nama"
                app:layout_constraintStart_toStartOf="@id/tv_nama"
                app:layout_constraintTop_toTopOf="@id/tv_nama">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/top_background" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnLogout"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:srcCompat="@drawable/baseline_logout_24"/>
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:srcCompat="@drawable/ic_account_circle_black_24dp"/>

                <TextView
                    android:id="@+id/tv_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengguna"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apapun@gmail.com"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_nama"
                    app:layout_constraintStart_toStartOf="@+id/tv_nama"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nama" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="0dp">
                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:id="@+id/nik"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="8dp"
                        android:hint="NIK"
                        android:drawableLeft="@drawable/baseline_numbers_24"
                        android:drawablePadding="8dp"
                        android:textColor="@color/grey"
                        android:textSize="25sp"
                        android:layout_gravity="center"/>

                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:id="@+id/nama"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="8dp"
                        android:hint="Nama"
                        android:drawableLeft="@drawable/baseline_how_to_reg_24"
                        android:drawablePadding="8dp"
                        android:textColor="@color/grey"
                        android:textSize="25sp"
                        android:layout_gravity="center"/>

                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:id="@+id/tanggal_lahir"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="8dp"
                        android:hint="Tanggal lahir"
                        android:drawableLeft="@drawable/baseline_child_24"
                        android:drawablePadding="8dp"
                        android:textColor="@color/grey"
                        android:textSize="25sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:id="@+id/tempat_lahir"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="8dp"
                        android:hint="Tempat Lahir"
                        android:drawableLeft="@drawable/baseline_place_24"
                        android:drawablePadding="8dp"
                        android:textColor="@color/grey"
                        android:textSize="25sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:id="@+id/pekerjaan"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="10dp"
                        android:hint="Pekerjaan"
                        android:drawableLeft="@drawable/baseline_work_24"
                        android:drawablePadding="8dp"
                        android:textColor="@color/grey"
                        android:textSize="25sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:id="@+id/jenis_kelamin"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="8dp"
                        android:hint="Jenis Kelamin"
                        android:drawableLeft="@drawable/baseline_gender_24"
                        android:drawablePadding="8dp"
                        android:textColor="@color/grey"
                        android:textSize="25sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:id="@+id/agama"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="8dp"
                        android:hint="Agama"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:drawablePadding="8dp"
                        android:textColor="@color/grey"
                        android:textSize="25sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:id="@+id/alamat"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="8dp"
                        android:hint="Alamat"
                        android:drawableLeft="@drawable/baseline_place_24"
                        android:drawablePadding="8dp"
                        android:textColor="@color/grey"
                        android:textSize="25sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:id="@+id/no_hp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lavender_border"
                        android:padding="8dp"
                        android:hint="Telepon"
                        android:drawableLeft="@drawable/baseline_smartphone_24"
                        android:drawablePadding="8dp"
                        android:textColor="@color/grey"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/perbarui"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            style="@android:style/Widget.Button"
            android:background="@drawable/btn_background_2"
            android:text="Perbarui"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>
        <ProgressBar
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/pb"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>