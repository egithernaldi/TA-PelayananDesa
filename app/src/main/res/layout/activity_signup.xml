<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbkg"
    android:orientation="vertical"
    tools:context=".activity.SignupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="450dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/nik"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_numbers_24"
                    android:drawablePadding="8dp"
                    android:hint="NIK"
                    android:padding="10dp"
                    android:textColor="@color/grey"
                    android:textSize="25sp" />
                <EditText
                    android:id="@+id/nama"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="8dp"
                    android:hint="Nama"
                    android:padding="10dp"
                    android:textColor="@color/grey"
                    android:textSize="25sp" />
                <EditText
                    android:id="@+id/email"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="8dp"
                    android:hint="Email"
                    android:padding="10dp"
                    android:textColor="@color/grey"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/ic_baseline_pass_24"
                    android:drawablePadding="8dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="@color/grey"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/tempat_lahir"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_place_24"
                    android:drawablePadding="10dp"
                    android:hint="Tempat lahir"
                    android:padding="8dp"
                    android:textColor="@color/grey"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/tanggal_lahir"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_child_24"
                    android:drawablePadding="10dp"
                    android:hint="Tanggal Lahir"
                    android:padding="8dp"
                    android:textColor="@color/grey"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/telepon"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lavender_border"
                    android:drawableLeft="@drawable/baseline_work_24"
                    android:drawablePadding="8dp"
                    android:hint="Telepon"
                    android:padding="10dp"
                    android:textColor="@color/grey"
                    android:textSize="25sp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </ScrollView>
        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/lavender_btn"
            android:text="Daftar"
            android:id="@+id/daftar"
            android:textSize="25sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginRedirectText"
            android:text="Sudah Registrasi? Masuk!!"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="14dp"
            android:textSize="18sp"
            android:textColor="@color/lavender"/>

    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/pb"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</LinearLayout>